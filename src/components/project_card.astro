---
import ProjectTools from "./project_tools.astro";
const { title, description, date, url, toolsArray } = Astro.props;
const isGithub = url.includes("github");
const iconClass = isGithub ? "fa-brands fa-github" : "fa-solid fa-globe";
const linkText = isGithub ? "Github Repository" : "Read More";
---

<div id="project-card" class="group mb-4 p-4 bg-slate-950 rounded-md border border-teal-700 hover:border-teal-600 hover:bg-slate-900/60 hover:shadow-slate-900 shadow-xl transition-all duration-300 flex flex-col break-inside-avoid">
  <div id="project-title">
    <h2 class="text-xl text-slate-300 font-semibold">
      <i class="fa-solid fa-caret-right ha-xs pr-1 -mb-[1px]">&nbsp;</i>
      {title}
    </h2>
  </div>
  <div id="project-description" class="text-slate-400">
    <p>{description}</p>
  </div>
  <div id="project-tools" class="flex gap-2 flex-wrap mt-4 mb-2">
    {toolsArray.map((tool) => (
    <ProjectTools tool={tool} />
    ))}
  </div>
  <div id="project-url" class="text-slate-300 font-mono text-sm flex gap-1">
    <p class="text-slate-500">{date}</p>
    <p class="text-slate-500">&middot;</p>
    <div class="max-lg:underline max-lg:text-teal-500 lg:group-hover:text-teal-500">
      <a href={url} target="_blank" rel="noopener noreferrer">
        <i className={`${iconClass} mr-1`}></i>{linkText}
      </a>
    </div>
  </div>
</div>
