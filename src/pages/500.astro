---
import Base from "../layouts/base.astro";
import page500gif from "../../public/images/uploads/500.gif";
import gohomegif from "../../public/images/uploads/home.gif";
import TextLink from "../components/text_link.astro";
const pageTitle = "[ERROR500] ";
interface Props {
    error: unknown
}

const { error } = Astro.props
---
<Base title={pageTitle} description="Error 500: Internal Server Error">
<div class="text-red-400">
    <div class="mb-4">
        <h2 class="font-mono font-semibold text-4xl text-left mb-10 mt-5 sm:mb-12">
            <span class="text-teal-300">$</span>{pageTitle}{error instanceof Error ? error.message : 'Unknown error.'}
        </h2>
    </div>
</div>
<div class="flex max-w-sm space-x-10">
    <img src={page500gif.src} />
    <img src={gohomegif.src} />
</div>
<p class="mt-10">
  <TextLink url="./">&larr; Go home</TextLink>
  <i class="mt-2">84ck_783_914n37</i>
</p>
</Base>
