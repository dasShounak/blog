---
import Base from "../layouts/base.astro";
const pageTitle = "Blog";
const allPosts = await Astro.glob("./posts/*.md");
---

<Base title={pageTitle}>
  <h2>{pageTitle}</h2>
  <!-- List all blogs -->
  <ul>
    {
      allPosts.map((post) => (
        <li>
          <a href={post.url}>{post.frontmatter.title}</a>
        </li>
      ))
    }
  </ul>
</Base>
